set guifont=Lucida_Console:h9:cANSI
set lines=50 columns=105 guioptions-=T
colorscheme asu1dark
"colorscheme murphy
highlight SpecialKey guifg=grey

" use max width for trace files
autocmd BufReadPost */serviceability/*/trace.log set co=9999

command Demo call Demo()

function Demo()
    colorscheme eclipse
    set guifont=Lucida_Console:h14:cANSI
endfunction

command Java call Java()

function Java()
    colorscheme eclipse
    set guifont=Lucida_Console:h14:cANSI filetype=java
endfunction

command XML call XML()

function XML()
    colorscheme eclipse
    set guifont=Lucida_Console:h14:cANSI filetype=xml
endfunction
